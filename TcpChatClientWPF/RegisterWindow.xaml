<Window x:Class="TcpChatClientWPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpChatClientWPF"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="300" Width="300"
        Style="{StaticResource VS2012WindowStyle}"
         Icon="Content/Images/icons8-Chat-96.png">
    <Grid Background="LightGreen">
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="23" Margin="83,65,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="170"/>
        <TextBox x:Name="Password"  HorizontalAlignment="Left" Height="23" Margin="83,122,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="170"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="17,119,0,0" VerticalAlignment="Top"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="17,62,0,0" VerticalAlignment="Top"/>
        <Button Click="EndRegBut_Click" Content="Зарегестрироваться" HorizontalAlignment="Left" Margin="17,208,0,0" VerticalAlignment="Top" Width="125"/>
        <Button Click="ExitRegBut_Click" Content="Закрыть" HorizontalAlignment="Left" Margin="188,208,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
